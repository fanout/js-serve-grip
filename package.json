{
  "name": "@fanoutio/serve-grip",
  "version": "4.2.0",
  "type": "module",
  "author": "Fastly <oss@fastly.com>",
  "description": "Connect-style Middleware for GRIP",
  "contributors": [
    {
      "name": "Katsuyuki Omuro",
      "email": "komuro@fastly.com"
    },
    {
      "name": "Konstantin Bokarius",
      "email": "kon@fanout.io"
    }
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "types": "./build/index-node.d.ts",
        "default": "./build/index-node.js"
      },
      "default": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    },
    "./node": {
      "types": "./build/node/index.d.ts",
      "default": "./build/node/index.js"
    },
    "./hono": {
      "fastly": {
        "types": "./build/hono/index-fastly.d.ts",
        "default": "./build/hono/index-fastly.js"
      },
      "default": {
        "types": "./build/hono/index.d.ts",
        "default": "./build/hono/index.js"
      }
    },
    "./hono/fastly": {
      "types": "./build/hono/fastly/index.d.ts",
      "default": "./build/hono/fastly/index.js"
    }
  },
  "files": [
    "build/**/*",
    "types/**/*"
  ],
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run test && npm run build-package",
    "build-package": "npm run build-package:clean && npm run build-package:compile",
    "build-package:clean": "rimraf build",
    "build-package:compile": "tsc --build tsconfig.build.json",
    "coverage": "c8 npm test",
    "test": "npm run test:unit",
    "test:unit": "glob -c \"node --loader ts-node/esm --no-warnings=ExperimentalWarning --test\" \"./test/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fanout/js-serve-grip.git"
  },
  "readmeFilename": "README.md",
  "keywords": [
    "grip",
    "fastly",
    "fanout",
    "pushpin",
    "realtime",
    "push",
    "publish",
    "express",
    "connect",
    "nextjs"
  ],
  "license": "MIT",
  "devDependencies": {
    "@fastly/js-compute": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/node": "^20",
    "c8": "^8.0.1",
    "glob-bin": "^1.1.0",
    "hono": "^4.11.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fanoutio/grip": "^4.3.0",
    "callable-instance": "^2.0.0",
    "debug": "^4.3.4"
  },
  "peerDependencies": {
    "@fastly/js-compute": "^3.0.0",
    "hono": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@fastly/js-compute": {
      "optional": true
    },
    "hono": {
      "optional": true
    }
  }
}
